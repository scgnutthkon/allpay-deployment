pipeline {
    agent any

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                script {
                    sh 'bash ~/prepare_pipeline.sh'
                    git branch: 'main',
                        credentialsId: 'jenkins_gitlab_ssh',
                        url: 'git@cad-gitlab.scg.com:allpay/mq-service.git'

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh 'docker build -t allpay-registry.scg.com/allpay-mq-service -f AllPayMQService/Dockerfile .'
                sh 'docker push allpay-registry.scg.com/allpay-mq-service'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_sccbsapvqap6_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        sh '''
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.100.12.94 'kubectl rollout restart deployment allpay-mq-service -n allpay-dev'
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
