pipeline {
    agent any

    environment {
        TAG_NAME = ''
    }

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'bash ~/prepare_pipeline.sh'
                script {
                    git branch: 'main',
                        credentialsId: 'scgnutthkon_github',
                        url: 'https://github.com/CADGithubMGR/AllPayVendorWeb.git'

                    TAG_NAME = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()

                    
                    // Checkout the latest tag
                    sh "git checkout ${TAG_NAME}"

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh 'export HTTP_PROXY=http://10.100.12.240:6969/'
                sh 'export HTTPS_PROXY=http://10.100.12.240:6969/'
                sh 'export NO_PROXY=127.*,10.100.*'
                sh "docker build -t localhost:5000/allpay-web-prd:${TAG_NAME} --build-arg='BUILD_ENV=prd' -f Dockerfile ."
                sh "docker push localhost:5000/allpay-web-prd:${TAG_NAME}"
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_SCCBSAPVPR1_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        sh """
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.101.3.153 '
                            kubectl set image deployment allpay-web allpay-web=allpay-registry.scg.com/allpay-web-prd:${TAG_NAME} -n allpay && 
                            kubectl rollout restart deployment allpay-web -n allpay'
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
