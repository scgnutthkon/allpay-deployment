pipeline {
    agent any

    environment {
        TAG_NAME = ''
    }

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'bash ~/prepare_pipeline.sh'
                script {
                    git branch: 'main',
                        credentialsId: 'scgnutthkon_github',
                        url: 'https://github.com/CADGithubMGR/AllPayVendorBackgroundService.git'

                    // Get the latest tag
                    TAG_NAME = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()

                    
                    // Checkout the latest tag
                    sh "git checkout ${TAG_NAME}"

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh "docker build -t allpay-registry.scg.com/allpay-background-service:${TAG_NAME} -f AllPayBackgroundService/Dockerfile ."
                sh "docker push allpay-registry.scg.com/allpay-background-service:${TAG_NAME}"
                sh "helm package --app-version ${TAG_NAME} --version ${TAG_NAME} ./.charts"
                sh "helm cm-push allpay-background-service-${TAG_NAME}.tgz allpay-charts -f"
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_sccbsapvqap6_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {

                        sh """
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.100.12.94 '
                            helm upgrade allpay-background-service allpay-charts/allpay-background-service --version ${TAG_NAME} -f ~/deployment/allpay-background-service/values.qas.yaml -n allpay-qas --insecure-skip-tls-verify'
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
