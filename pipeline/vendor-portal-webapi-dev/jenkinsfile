pipeline {
    agent any

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'bash ~/prepare_pipeline.sh'
                script {
                    git branch: 'deploy_dev',
                        credentialsId: 'jenkins_gitlab_ssh',
                        url: 'git@cad-gitlab.scg.com:allpay/vendor-portal-webapi.git'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'ls -al'
                sh 'docker build -t allpay-registry.scg.com/vendor-portal-webapi -f VendorPortalWebAPI/Dockerfile .'
                sh 'docker push allpay-registry.scg.com/vendor-portal-webapi'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_sccbsapvqap6_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        sh '''
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.100.12.94 'kubectl rollout restart deployment vendor-portal-webapi -n allpay-dev'
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}

