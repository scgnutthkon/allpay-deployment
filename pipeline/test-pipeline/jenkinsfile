pipeline {
    agent any

    environment {
        TAG_NAME = ''
    }

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'bash ~/prepare_pipeline.sh'
                script {
                    git branch: 'main',
                        credentialsId: 'scgnutthkon_github',
                        url: 'https://github.com/CADGithubMGR/AllPayVendorDatabase.git'

                    // Get the latest tag
                    TAG_NAME = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()

                    
                    // Checkout the latest tag
                    sh "git checkout ${TAG_NAME}"

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh "docker build -t allpay-registry.scg.com/allpay-dbmigration:${TAG_NAME} -f AllPayDBMigration/Dockerfile ."
            }
        }
    }
}

