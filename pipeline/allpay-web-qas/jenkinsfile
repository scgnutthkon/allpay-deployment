pipeline {
    agent any

    environment {
        TAG_NAME = ''
    }

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                sh 'bash ~/prepare_pipeline.sh'
                script {
                    git branch: 'main',
                        credentialsId: 'scgnutthkon_github',
                        url: 'https://github.com/CADGithubMGR/AllPayVendorWeb.git'

                    TAG_NAME = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()

                    
                    // Checkout the latest tag
                    sh "git checkout ${TAG_NAME}"

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh "docker build -t localhost:5000/allpay-web:${TAG_NAME}-qas --build-arg='BUILD_ENV=qas' -f Dockerfile ."
                sh "docker push localhost:5000/allpay-web:${TAG_NAME}-qas"
                sh "helm package --app-version ${TAG_NAME}-qas --version ${TAG_NAME}-qas ./.charts"
                sh "helm cm-push allpay-web-${TAG_NAME}-qas.tgz allpay-charts -f"
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_sccbsapvqap6_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        sh """
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.100.12.94 '
                            helm upgrade allpay-web allpay-charts/allpay-web --version ${TAG_NAME} -f ~/deployment/allpay-web/values.qas.yaml -n allpay-qas --insecure-skip-tls-verify'
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
