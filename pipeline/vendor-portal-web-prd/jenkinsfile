pipeline {
    agent any

    environment {
        TAG_NAME = ''
    }

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                script {
                    git branch: 'main',
                        credentialsId: 'scgnutthkon_github',
                        url: 'https://github.com/CADGithubMGR/VendorPortalWeb.git'

                    TAG_NAME = sh(script: 'git describe --tags --abbrev=0', returnStdout: true).trim()

                    
                    // Checkout the latest tag
                    sh "git checkout ${TAG_NAME}"

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh 'ls -al'
                sh "docker build -t localhost:5000/vendor-portal-web-prd:${TAG_NAME} --build-arg='BUILD_ENV=prd' -f Dockerfile ."
                sh "docker push localhost:5000/vendor-portal-web-prd:${TAG_NAME}"
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_SCCBSAPVPR1_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {

                        sh """
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.101.3.153 '
                            kubectl set image deployment vendor-portal-web vendor-portal-web=allpay-registry.scg.com/vendor-portal-web-prd:${TAG_NAME} -n allpay && 
                            kubectl rollout restart deployment vendor-portal-web -n allpay'
                        """
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
