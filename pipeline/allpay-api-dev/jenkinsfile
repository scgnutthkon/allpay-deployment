pipeline {
    agent any

    stages {
        stage('Checkout') {
            agent {
                label 'agent1'
            }
            steps {
                script {
                    git branch: 'develop',
                        credentialsId: 'jenkins_gitlab_ssh',
                        url: 'git@cad-gitlab.scg.com:allpay/allpay-webapi.git'

                    stash includes: '**/*', name: 'project_source'
                }
            }
        }
        stage('Build') {
            agent {
                label 'agent1'
            }
            steps {
                unstash 'project_source'
                sh 'ls -al'
                sh 'echo $HTTP_PROXY'
                sh 'docker build -t allpay-registry.scg.com/allpay-webapi -f AllPayWebAPI/Dockerfile .'
                sh 'docker push allpay-registry.scg.com/allpay-webapi'
            }
        }
        stage('Deploy') {
            steps {
                script {
                    sh 'echo Restarting deployment...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'administrator_sccbsapvqap6_key', keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        sh '''
                            ssh -i ${SSH_PRIVATE_KEY} -o StrictHostKeyChecking=no administrator@10.100.12.94 'kubectl rollout restart deployment allpay-webapi -n allpay-dev'
                        '''
                    }
                }
            }
        }
    }
    post {
        always {
            emailext(
                subject: '$DEFAULT_SUBJECT',
                body: '$DEFAULT_CONTENT',
                to: '$DEFAULT_RECIPIENTS'
            )
        }
    }
}
